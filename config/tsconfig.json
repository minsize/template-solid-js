{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "../src",
    "outDir": "static",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "moduleResolution": "bundler",
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "root/*": ["../*"]
    }
  },
  "exclude": ["node_modules", "static"],
  "types": ["*.d.ts"]
}
